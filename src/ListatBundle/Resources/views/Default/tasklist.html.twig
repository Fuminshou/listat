{% extends 'base.html.twig' %}

{% block title %}
    {{ project.getName() }}
{% endblock %}

{% block body %}
    <h2>{{ project.getName() }}</h2>
    <h3>New task</h3>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-5">
            {{ form_label(form.name) }}
        </div>
        <div class="col-md-4">
            {{ form_label(form.startDate) }}
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-5">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-4">
            {{ form_errors(form.startDate) }}
            {{ form_widget(form.startDate) }}
        </div>
        <div class="col-md-3 pull-right">
            {{ form_widget(form.reset) }}
            {{ form_widget(form.save) }}
        </div>
    </div>
    {{ form_end(form) }}
    <table class="table table-responsive table-striped">
        <caption>Active tasks</caption>
        <tbody>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-7">Task</th>
            <th class="col-md-2">Start date</th>
            <th class="col-md-2">Last update</th>
        </tr>
        {% for t in tasks %}
            <tr class="row">
                <td class="col-md-1">
                    <a href="{{ path('listat_delete_task', {'id': t.getId()}) }}" class="inline-btn">
                        <i class="fa fa-minus-square-o fa-lg"></i></a>
                    <a href="{{ path('listat_edit_task', {'id': t.getId()}) }}" class="inline-btn">
                        <i class="fa fa-pencil-square-o fa-lg"></i></a>
                </td>
                <td class="col-md-7">{{ t.getName() }}</td>
                <td class="col-md-2">{{ t.getStartDate|date('d/m/Y') }}</td>
                <td class="col-md-2">{{ t.getLastUpdate|date('d/m/Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
